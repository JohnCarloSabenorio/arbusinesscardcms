<div id="overview" class="content-section active">
  <div class="card mb-4">
    <div class="card-body">
      <div class="profile-header">
        <img
          src=""
          alt="Profile Picture"
          id="profile-picture"
          class="profile-picture"
        />
        <div class="profile-actions">
          <button
            onclick="document.getElementById('profile-img').click()"
            class="btn-outline"
          >
            <i class="bi bi-camera"></i>
            Change
          </button>
          <input
            type="file"
            id="profile-img"
            class="form-control"
            accept="image/png, image/jpeg, image/jpg"
            hidden
          />
          <!-- <button class="btn-outline">
                        <i class="bi bi-trash"></i>
                        Remove
                    </button> -->
        </div>
      </div>

      <h5 class="card-title">Profile Information</h5>
      <p class="card-text">Update your personal and professional information</p>

      <form id="profileForm" method="POST">
        <div class="row">
          <div class="col-md-6 form-group">
            <label for="firstName" class="form-label">First Name</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              name="firstName"
              value="<%= user.first_name %>"
              placeholder="Enter your first name"
            />
          </div>
          <div class="col-md-6 form-group">
            <label for="middleName" class="form-label">Middle Name</label>
            <input
              type="text"
              class="form-control"
              id="middleName"
              name="middleName"
              value="<%= user.middle_name %>"
              placeholder="Enter your middle name"
            />
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 form-group">
            <label for="lastName" class="form-label">Last Name</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              name="lastName"
              value="<%= user.last_name %>"
              placeholder="Enter your last name"
            />
          </div>
          <div class="col-md-6 form-group">
            <label for="position" class="form-label">Current Position</label>
            <input
              type="text"
              class="form-control"
              name="position"
              id="position"
              placeholder="Enter your current position"
            />
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 form-group">
            <label for="department" class="form-label">Department</label>
            <select
              name="department"
              id="departmentDropdown"
              class="form-control"
            >
              <!-- Options will be populated by JavaScript -->
            </select>
          </div>
          <div class="col-md-6 form-group">
            <label for="honorifics" class="form-label">Honorifics</label>
            <input
              type="text"
              class="form-control"
              name="honorifics"
              id="honorifics"
              value="<%= user.honorifics %>"
              placeholder="Enter honorifics"
            />
          </div>
        </div>

        <div class="form-group">
          <label for="researchFields" class="form-label">Research Fields</label>
          <input
            type="text"
            class="form-control"
            id="researchFields"
            name="researchFields"
            placeholder="Enter your fields here..."
          />
        </div>

        <div class="form-group">
          <label for="introduction" class="form-label">Introduction</label>
          <textarea
            class="form-control description-field"
            name="introduction"
            id="introduction"
            placeholder="Write a brief introduction about yourself"
            maxlength="1000"
          ></textarea>
        </div>

        <div class="d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-custom" id="saveProfile">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
