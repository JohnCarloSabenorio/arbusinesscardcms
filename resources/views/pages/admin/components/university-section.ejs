<section id="university-section" class="university-contents">
  <div class="edit-image-overlay">
    <div class="upload-image-div">
      <button type="button" id="close-upload-div">X</button>
      <div class="upload-container">
        <canvas class="upload-canvas"></canvas>
        <input type="file" id="file-awardupload" class="upload-btn" accept="image/*" />
        <button type="button" id="submit-award-img" class="submit-btn" disabled>
          Submit
        </button>
      </div>
    </div>
  </div>

  <h2>University Contents</h2>
  <div class="university-tabs">
    <div class="university-tab active" data-tab="home">Home</div>
    <div class="university-tab" data-tab="achievements">Achievements</div>
  </div>
  <div id="home-tab" class="university-tab-content active">
    <div class="university-preview">
      <img
        id="preview-background"
        src="university-background.jpg"
        alt="University Background"
        class="university-preview-background"
      />
      <div class="university-preview-content">
        <div class="university-preview-text">
          <h3 id="preview-title">LPU Cavite Opens Doors to Community</h3>
          <p id="preview-text">
            LPU Cavite opens doors to community: Shared sports facilities boost
            health and wellbeing.
          </p>
          <button id="preview-button">Read more</button>
        </div>
        <div class="university-carousel">
          <img
            id="preview-image-1"
            src="university-image-1.jpg"
            alt="University Image 1"
          />
          <img
            id="preview-image-2"
            src="university-image-2.jpg"
            alt="University Image 2"
          />
          <img
            id="preview-image-3"
            src="university-image-3.jpg"
            alt="University Image 3"
          />
        </div>
      </div>
    </div>

    <!-- UNIVERSITY PRINCIPLES -->
    <div class="university-form">
      <h3>University Principles</h3>

      <!-- VISION FORM -->
      <form
        action="/lpu/1/vision"
        id="vision-form"
        class="principle-form"
        method="POST"
      >
        <label for="lpu-vision">Vision</label>
        <textarea
          id="lpu-vision"
          rows="4"
          class="lpu-principle"
          name="newText"
          disabled
        >
        University Vision</textarea
        >
        <button type="button" id="edit-vision" class="uni-edit-btn">
          Edit
        </button>
        <button type="submit" id="submit-vision" class="uni-submit-btn">
          Submit
        </button>
      </form>

      <!-- MISSION FORM -->
      <form
        action="/lpu/1/mission"
        id="mission-form"
        class="principle-form"
        method="POST"
      >
        <label for="lpu-mission">Misison</label>
        <textarea
          id="lpu-mission"
          rows="4"
          class="lpu-principle"
          name="newText"
          disabled
        >
        University Mission</textarea
        >
        <button type="button" id="edit-mission" class="uni-edit-btn">
          Edit
        </button>
        <button type="submit" id="submit-mission" class="uni-submit-btn">
          Submit
        </button>
      </form>

      <!-- CORE VALUES FORM -->
      <form
        action="/lpu/1/core_values"
        id="values-form"
        class="principle-form"
        method="POST"
      >
        <label for="lpu-values">Core Values</label>
        <textarea
          id="lpu-values"
          rows="4"
          class="lpu-principle"
          name="newText"
          disabled
        >
        University Core Values</textarea
        >
        <button
          type="button"
          id="submit-values"
          id="edit-values"
          class="uni-edit-btn"
        >
          Edit
        </button>
        <button type="submit" class="uni-submit-btn">Submit</button>
      </form>

      <!-- PHILOSOPPHY FORM -->
      <form
        action="/lpu/1/philosophy"
        id="philo-form"
        class="principle-form"
        method="POST"
      >
        <label for="lpu-philo">Philosophy</label>
        <textarea
          id="lpu-philo"
          rows="4"
          class="lpu-principle"
          name="newText"
          disabled
        >
        University Philosophy</textarea
        >
        <button type="button" id="edit-philo" class="uni-edit-btn">Edit</button>
        <button type="submit" class="uni-submit-btn">Submit</button>
      </form>
    </div>
    <!-- END OF UNIVERSITY PRINCIPLES -->
  </div>

  <div
    id="achievements-tab"
    class="university-tab-content admin-achievements-content"
  >
    <div class="achievements-form">
      <h3>Add New Achievement</h3>

      <div class="award-list">
        <div class="award-item-container"></div>
      </div>
    </div>
    <button>Add Award</button>
  </div>
</section>

