<section id="university-section" class="university-contents">
  <div class="edit-image-overlay">
    <div class="upload-image-div">
      <button type="button" id="close-upload-div">X</button>
      <div class="upload-container">
        <canvas class="upload-canvas"></canvas>
        <input
          type="file"
          id="file-awardupload"
          class="upload-btn"
          accept="image/*"
        />
        <button type="button" id="submit-award-img" class="submit-btn" disabled>
          Submit
        </button>
      </div>
    </div>
  </div>

  <div class="add-award-overlay">
    <div class="add-award-div">
      <button type="button" id="close-add-div">X</button>
      <div class="add-award-container">
        <canvas class="add-award-canvas"></canvas>
        <input
          type="file"
          id="file-add-award"
          class="upload-btn"
          accept="image/*"
        />
        <div>
          <label for="new-cat-input">Category</label>
          <input type="text" id="new-cat-input" value="" />
          <label for="new-title-input">Title</label>
          <input type="text" id="new-title-input" value="" />
        </div>
        <button type="button" id="submit-add-award" class="submit-btn">
          Submit
        </button>
      </div>
    </div>
  </div>

  <h2>University Contents</h2>
  <div class="university-tabs">
    <div class="university-tab active" data-tab="home">Principles</div>
    <div class="university-tab" data-tab="achievements">Awards</div>
    <div class="university-tab" data-tab="events">Events</div>
  </div>
  <div id="home-tab" class="university-tab-content active">
    <div class="university-form">
      <h3>University Principles</h3>
      <div class="principles-grid">
        <div class="principle-column">
          <!-- VISION FORM -->
          <form
            action="/lpu/1/vision"
            id="vision-form"
            class="principle-form"
            method="POST"
          >
            <label for="lpu-vision">Vision</label>
            <textarea
              id="lpu-vision"
              rows="2"
              class="lpu-principle"
              name="newText"
              disabled
            >
University Vision</textarea
            >
            <div class="button-group">
              <button type="button" id="edit-vision" class="uni-edit-btn">
                Edit
              </button>
              <button type="submit" id="submit-vision" class="uni-submit-btn">
                Submit
              </button>
            </div>
          </form>

          <!-- MISSION FORM -->
          <form
            action="/lpu/1/mission"
            id="mission-form"
            class="principle-form"
            method="POST"
          >
            <label for="lpu-mission">Mission</label>
            <textarea
              id="lpu-mission"
              rows="2"
              class="lpu-principle"
              name="newText"
              disabled
            >
University Mission</textarea
            >
            <div class="button-group">
              <button type="button" id="edit-mission" class="uni-edit-btn">
                Edit
              </button>
              <button type="submit" id="submit-mission" class="uni-submit-btn">
                Submit
              </button>
            </div>
          </form>
        </div>

        <div class="principle-column">
          <!-- CORE VALUES FORM -->
          <form
            action="/lpu/1/core_values"
            id="values-form"
            class="principle-form"
            method="POST"
          >
            <label for="lpu-values">Core Values</label>
            <textarea
              id="lpu-values"
              rows="2"
              class="lpu-principle"
              name="newText"
              disabled
            >
University Core Values</textarea
            >
            <div class="button-group">
              <button type="button" id="edit-values" class="uni-edit-btn">
                Edit
              </button>
              <button type="submit" id="submit-values" class="uni-submit-btn">
                Submit
              </button>
            </div>
          </form>

          <!-- PHILOSOPHY FORM -->
          <form
            action="/lpu/1/philosophy"
            id="philo-form"
            class="principle-form"
            method="POST"
          >
            <label for="lpu-philo">Philosophy</label>
            <textarea
              id="lpu-philo"
              rows="2"
              class="lpu-principle"
              name="newText"
              disabled
            >
University Philosophy</textarea
            >
            <div class="button-group">
              <button type="button" id="edit-philo" class="uni-edit-btn">
                Edit
              </button>
              <button type="submit" class="uni-submit-btn">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div
    id="achievements-tab"
    class="university-tab-content admin-achievements-content"
  >
    <div class="achievements-form">
      <h3>Add New Achievement</h3>

      <div class="award-list">
        <div class="award-item-container"></div>
      </div>
    </div>
    <button id="add-award-btn">Add Award</button>
  </div>

  <div id="events-tab" class="university-tab-content">
    <!-- Events List Section -->
    <div class="events-content">
      <div class="events-header">
        <h3>University Events</h3>
        <button id="add-event-btn" class="add-event-btn">
          <i class="fas fa-plus"></i> Add New Event
        </button>
      </div>

      <div class="events-filters">
        <div class="filter-group">
          <input
            type="text"
            placeholder="Search events..."
            class="event-search"
          />
        </div>
      </div>

      <div class="events-grid">
        <!-- Events will be populated here dynamically -->
      </div>
    </div>

    <!-- Add/Edit Event Modal -->
    <div id="event-modal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Add New Event</h3>
        <form id="event-form" class="event-form">
          <div class="form-group">
            <label for="event-title">Event Title</label>
            <input type="text" id="event-title" required />
          </div>
          <div class="form-group">
            <label for="event-description">Description</label>
            <textarea id="event-description" required></textarea>
          </div>
          <div class="form-group">
            <label for="event-date">Date</label>
            <input type="date" id="event-date" required />
          </div>
          <div class="form-group">
            <label for="event-image">Event Image</label>
            <input type="file" id="event-image-input" accept="image/*" />
          </div>
          <button type="submit" class="submit-btn">Save Event</button>
        </form>
      </div>
    </div>
  </div>
</section>

