<section id="members-section" class="members-section">
  <div class="members-header">
    <h2>Members</h2>
    <button class="add-member-btn">
      <i class="fas fa-plus"></i> Add Member
    </button>
  </div>
  <div class="members-actions">
    <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Search members..." />
    </div>
    <button class="filter-btn"><i class="fas fa-filter"></i> Filter</button>
  </div>
  <table class="members-table">
    <thead>
      <tr>
        <th>No</th>
        <th>Members</th>
        <th>Status</th>
        <th>Joined</th>
        <th>Last access</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="membersTableBody">
      <!-- Dummy data will be inserted here by JavaScript -->
    </tbody>
  </table>
  <div class="pagination">
    <div class="pagination-info">
      Showing <span>1</span> to <span>10</span> of <span>50</span> results
    </div>
    <div class="pagination-buttons">
      <a href="#" class="prev-page"><i class="fas fa-chevron-left"></i></a>
      <div class="number-buttons"></div>
      <a href="#" class="next-page"><i class="fas fa-chevron-right"></i></a>
    </div>
  </div>
</section>
