<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ARCMS</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="icon" href="/images/temporary.jpg" />
    <link rel="stylesheet" href="/styles/admin.css" />
    <link rel="stylesheet" href="/styles/admin/university-section.css" />
    <link rel="stylesheet" href="/styles/admin/employee-section.css" />
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="logo">
          <img
            src="/images/temporary.jpg"
            alt="ARCMS Logo"
            style="border-radius: 2em"
          />
        </div>
        <div class="user-info">
          <img src="vampire.png" alt="User Avatar" class="avatar" />
          <div>
            <div class="user-name">John Doe</div>
            <div class="user-role">Admin</div>
          </div>
        </div>
        <nav>
          <h3>Main Menu</h3>
          <ul>
            <!-- <li><a href="#" id="dashboard-link"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li> -->
            <li>
              <a href="#" id="members-link" class="sidebar-active"
                ><i class="fas fa-users"></i> Members</a
              >
            </li>
            <!-- <li><a href="#" id="analytics-link"><i class="fas fa-chart-bar"></i> Analytics</a></li> -->
            <li>
              <a href="#" id="university-link"
                ><i class="fas fa-university"></i> University Contents</a
              >
            </li>
            <li>
              <a href="#" id="university-management-link"
                ><i class="fas fa-cogs"></i> University Management</a
              >
            </li>
            <li>
              <a href="#" id="markers-link"
                ><i class="fas fa-crosshairs"></i>Markers</a
              >
            </li>
          </ul>
          <!-- <h3>Settings</h3>
                <ul>
                    <li><a href="#"><i class="fas fa-cog"></i> General Settings</a></li>
                    <li><a href="#"><i class="fas fa-user-cog"></i> Account Settings</a></li>
                    <li><a href="#"><i class="fas fa-bell"></i> Notifications</a></li>
                </ul> -->
        </nav>
        <div class="logout">
          <p>
            <a href="/admin/logout"
              ><i class="fas fa-sign-out-alt"></i> Log out</a
            >
          </p>
        </div>
      </aside>
      <main>
        <header></header>

        <%- include('./components/employees-section.ejs')%>

        <!-- UNIVERSITY CONTENTS SECTION -->
        <%- include('./components/university-section.ejs')%>

        <section
          id="university-management-section"
          class="university-management-section"
        >
          <h2 class="section-title">University Management</h2>
          <div class="management-grid">
            <div class="management-card">
              <h3>Departments</h3>
              <ul id="departments-list" class="management-list">
                <!-- Departments will be dynamically added here -->
              </ul>
              <button class="add-btn" onclick="openModal('department')">
                <i class="fas fa-plus"></i> Add Department
              </button>
            </div>
            <div class="management-card">
              <h3>Offices</h3>
              <ul id="offices-list" class="management-list">
                <!-- Offices will be dynamically added here -->
              </ul>
              <button class="add-btn" onclick="openModal('office')">
                <i class="fas fa-plus"></i> Add Office
              </button>
            </div>
            <div class="management-card">
              <h3>Consultation Types</h3>
              <ul id="consultation-types-list" class="management-list">
                <!-- Consultation Types will be dynamically added here -->
              </ul>
              <button class="add-btn" onclick="openModal('consultation')">
                <i class="fas fa-plus"></i> Add Consultation Type
              </button>
            </div>
          </div>

          <!-- Add/Edit Modal -->
          <div id="management-modal" class="modal">
            <div class="modal-content">
              <span class="close" onclick="closeModal()">&times;</span>
              <h3 id="modal-title">Add New Item</h3>
              <form id="management-form" class="management-form">
                <input
                  type="text"
                  id="item-name"
                  required
                  placeholder="Enter name"
                />
                <button type="submit" class="submit-btn">Save</button>
              </form>
            </div>
          </div>
        </section>

        <%- include('./components/markers-section.ejs')%>
      </main>
    </div>
    <script src="/scripts/admin-script.js"></script>
    <script src="/scripts/employees-section.js"></script>
    <script src="/scripts/university-section.js"></script>
  </body>
</html>
