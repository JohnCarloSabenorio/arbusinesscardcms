          <div>
            <div class="user-name">Admin</div>
            <div class="user-role">Admin</div>
          </div>
        </div>
        <nav>
          <h3>Main Menu</h3>
          <ul>
            <!-- <li><a href="#" id="dashboard-link"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li> -->
            <li>
